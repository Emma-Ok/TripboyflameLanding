---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Subfooter from '@components/Subfooter.astro';
interface Props {
  title: string
}

const { title } = Astro.props
---
<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name = "description" content = "Tripboyflame's personal website" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<title>Tripboyflame</title>
	</head>
	<body class="bg-cover bg-center bg-no-repeat bg-black">
		<Header />
		<main>
			<slot />
		</main>
		<Footer/>
		<Subfooter/>
	</body>
</html>

<style>
	html,
	body {
	  margin: 0;
	  padding: 0;
	  width: 100%;
	  min-height: 100%;
	}
  
	body {
	  display: flex;
	  flex-direction: column;
	}
  
	main {
	  flex: 1;
	}
  </style>