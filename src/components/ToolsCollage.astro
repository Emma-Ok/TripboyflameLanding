---
import SectionContainer from "@components/SectionContainer.astro";
import Subtitle from "@components/Subtitle.astro";

const tools = [
  {
    title: "Adobe Premiere Pro",
    image: "/tools-img/premier.svg",
    url: "#",
  },
  {
    title: "Adobe After Effects",
    image: "/tools-img/after-effects.svg",
    url: "#",
  },
  {
    title: "Davinci Resolve",
    image: "/tools-img/davinci.svg",
    url: "#",
  },
  {
    title: "Final Cut Pro",
    image: "/tools-img/photoshop.svg",
    url: "#",
  },
  {
    title: "Adobe Lightroom",
    image: "/tools-img/lightroom.svg",
    url: "#",
  },
  {
    title: "Final Cut Pro",
    image: "/tools-img/finalcut.svg",
    url: "#",
  },
];
---

<SectionContainer title="Herramientas de ediciÃ³n" id="tools">
  <Subtitle>
    Las mejores <span class="text-primary">Herramientas</span> dan los mejores resultados.
  </Subtitle>

  <div class="w-full max-w-6xl mx-auto px-4 py-6">
    <ul class="grid grid-cols-6 gap-2 items-center">
      {tools.map(({ title, image, url }) => (
        <li class="flex flex-col items-center">
          <a
            class="relative group rounded-lg overflow-hidden shadow-md transition-transform duration-300 hover:scale-105"
            href={url}
          >
            <div class="w-12 h-12 sm:w-10 sm:h-10 md:w-8 md:h-8 lg:w-14 lg:h-14 relative overflow-hidden rounded-sm">
              <img
                src={image}
                alt={title}
                class="w-full h-full object-cover transition-transform duration-300 ease-in-out group-hover:scale-110"
              />
            </div>
            <div class="absolute inset-0 flex justify-center items-center bg-black bg-opacity-60 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <span class="text-white text-xs font-bold text-center">{title}</span>
            </div>
          </a>
        </li>
      ))}
    </ul>
  </div>
</SectionContainer>
