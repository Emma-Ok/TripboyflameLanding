<header
  id="header"
  class="w-full h-20 flex justify-center items-center sticky top-0 bg-black z-50 backdrop-blur-xl shadow-md transition-all duration-300"
>
  <img    
    id="header-img"
    src="/Tripboyflametest.webp"
    alt="logotripboyflame"
    class="h-full w-auto object-contain transition-transform duration-300"
  />
</header>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const img = document.getElementById("header-img");

    if (!img) return; // Verifica si la imagen existe antes de continuar

    window.addEventListener("scroll", () => {
      if (window.scrollY > 50) {
        img.style.transform = "scale(1.2)";
      } else {
        img.style.transform = "scale(1)";
      }
    });
  });
</script>
