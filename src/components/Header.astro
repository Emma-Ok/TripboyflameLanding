<header
  id="header"
  class="w-full py-4 px-8 flex justify-between items-center md:max-w-[1400px] md:mx-auto sticky top-0 right-0 left-0 bg-black z-50 backdrop-blur-xl shadow-md transition-all duration-300"
>
  <div class="flex items-center">
    <img    
      src="/logotrip.webp"
      alt="logotripboyflame"
      class="h-[30px] w-auto sm:h-10 md:h-12 bg-black p-1"
    />
  </div>
  <div
    class="text-primary font-semibold text-center flex-grow text-sm sm:text-lg md:text-xl"
  >
    TRIP BOY FLAME
  </div>
</header>

<script>
  const header = document.getElementById("header");

  if (header) {
    window.addEventListener("scroll", () => {
      if (window.scrollY > 50) {
        header.classList.add("p-2", "bg-black/90");
        header.classList.remove("p-4");
      } else {
        header.classList.add("p-4");
        header.classList.remove("p-2", "bg-black/90");
      }
    });
  }
</script>
