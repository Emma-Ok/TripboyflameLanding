<header
  id="header"
  class="fixed top-0 left-0 w-full h-14 z-50 max-w-[1440px] mx-auto flex items-center justify-between p-4 bg-black text-white shadow-md transition-all duration-300"
>
  <div class="flex items-center">
    <img    
      src="/tripbackground.webp"
      alt="logotripboyflame"
      class="h-12 w-auto sm:h-10 md:h-12 bg-black p-1"
    />
  </div>
  <div
    class="text-primary font-semibold text-center flex-grow text-sm sm:text-lg md:text-xl"
  >
    TRIP BOY FLAME
  </div>
</header>

<script>
  const header = document.getElementById("header");

  if (header) {
    window.addEventListener("scroll", () => {
      if (window.scrollY > 50) {
        header.classList.add("p-2", "bg-black/90");
        header.classList.remove("p-4");
      } else {
        header.classList.add("p-4");
        header.classList.remove("p-2", "bg-black/90");
      }
    });
  }
</script>
