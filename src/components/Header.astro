<header
  id="header"
  class="w-full h-20 flex justify-center items-center sticky top-0 bg-black z-50 backdrop-blur-xl shadow-md transition-all duration-300"
>
  <img    
    src="/Tripboyflametest.webp"
    alt="logotripboyflame"
    class="h-full w-auto object-contain transition-all duration-300"
  />
</header>

<script>
  const header = document.getElementById("header");

  if (header) {
    window.addEventListener("scroll", () => {
      if (window.scrollY > 50) {
        header.classList.add("bg-black/90", "shadow-lg");
        header.style.height = "5rem"; // Aumenta la altura del header (ajustar seg√∫n necesidad)
      } else {
        header.classList.remove("bg-black/90", "shadow-lg");
        header.style.height = "4rem"; // Vuelve a la altura original
      }
    });
  }
</script>
