---
interface Props {
  images: string[]; // Array of image URLs
}

const { images = [] } = Astro.props as Props;
---

<div class="pb-8">
  <h2 class="text-xl font-semibold text-primary mb-4">GALERIA</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    {images.map((image, index) => (
      <div class="relative overflow-hidden rounded-lg transform transition-all duration-300 opacity-0 translate-y-10 animate-fade-in justify-center items-center">
        <img
          src={image}
          alt={`Collage Image ${index + 1}`}
          class="w-full h-full object-contain object-center transition-transform duration-300 hover:scale-110 active:scale-125"
          loading="lazy"
        />
      </div>
    ))}
  </div>
</div>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fade-in 0.6s ease-out forwards;
  }
</style>
